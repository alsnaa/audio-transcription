generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Job {
  id        String    @id @default(uuid())
  fileName  String
  filePath          String
  processedFilePath String?
  chunkPaths        String[]
  status            JobStatus @default(PENDING)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
